{
  "name": "@nestjs/schematics",
  "version": "6.0.1",
  "description": "Nest - modern, fast, powerful node.js web framework (@schematics)",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "lint:src": "tslint --project tsconfig.json",
    "lint:test": "tslint --project test/tsconfig.json",
    "test": "jest --no-cache --config test/jest-config.json",
    "test:dev": "npm run -s test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestjs/schematics.git"
  },
  "contributors": [
    "ThomRick",
    "Kamil Mysliwiec"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nestjs/schematics/issues"
  },
  "homepage": "https://github.com/nestjs/schematics#readme",
  "dependencies": {
    "@angular-devkit/core": "7.3.6",
    "@angular-devkit/schematics": "7.3.6",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.14",
    "@types/node": "10.14.3",
    "gulp": "4.0.0",
    "jest": "24.5.0",
    "nyc": "13.3.0",
    "ts-jest": "24.0.0",
    "tslint": "5.14.0",
    "typescript": "3.3.4000"
  },
  "schematics": "./collection.json",
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
