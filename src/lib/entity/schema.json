{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNestEntity",
  "title": "Nest Entity Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the entity.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the entity?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the entity."
    },
    "sourceRoot": {
      "type": "string",
      "description": "Nest entity source root directory."
    },
    "flat": {
      "default": true,
      "description": "Flag to indicate if a directory is created."
    }
  },
  "required": [
    "name"
  ]
}
