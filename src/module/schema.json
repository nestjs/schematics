{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNestModule",
  "title": "Nest Module Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the module."
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the module."
    },
    "module": {
      "type": "string",
      "format": "path",
      "description": "The path to insert the module declaration."
    },
    "skipImport": {
      "type": "boolean",
      "description": "Directive to insert declaration in module."
    }
  },
  "required": [
    "name"
  ]
}